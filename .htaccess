RewriteEngine On
RewriteBase /PHP-nft-marketplace-app

# Allow real files and directories to pass through
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

